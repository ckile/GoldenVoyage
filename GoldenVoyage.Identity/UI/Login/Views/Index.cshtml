@model GoldenVoyage.Identity.UI.Login.LoginViewModel

<div class="login-page">
    <div class="page-header">
        <h1>员工登陆 <small>如果你没有“员工号”或忘记“密码”请与管理员联系</small></h1>
    </div>

    @Html.Partial("_ValidationSummary")

    <div class="row">
        <div class="col-sm-6">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <h3 class="panel-title">使用工号登陆</h3>
                </div>
                <div class="panel-body">

                    <form asp-route="Login">
                        <input type="hidden" asp-for="SignInId" />

                        <fieldset>
                            <div class="form-group">
                                <label asp-for="Username"></label>
                                <input class="form-control" placeholder="Employee Code" asp-for="Username" autofocus>
                            </div>
                            <div class="form-group">
                                <label asp-for="Password"></label>
                                <input type="password" class="form-control" placeholder="Password" asp-for="Password" autocomplete="off">
                            </div>
                            <div class="form-group login-remember">
                                <label asp-for="RememberLogin">
                                    <input asp-for="RememberLogin">
                                    <strong>如果此计算机属于个人使用，可选择记住密码</strong>
                                </label>
                            </div>
                            <div class="form-group">
                                <button class="btn btn-primary">登陆</button>
                            </div>
                        </fieldset>
                    </form>
                </div>

                @*<ul class="list-unstyled">
                        <li ng-repeat="link in model.additionalLinks"><a ng-href="{{link.href}}">{{link.text}}</a></li>
                    </ul>*@
            </div>
        </div>
 
    </div>
</div>